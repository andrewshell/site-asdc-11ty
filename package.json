{
  "name": "codewithcontext",
  "version": "1.0.0",
  "description": "Code With Context email landing page",
  "license": "MIT",
  "author": "Andrew Shell <andrew@andrewshell.org>",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:*",
    "start": "run-p start:*",
    "build:css": "npx tailwindcss -i ./public/input.css -o ./public/output.css",
    "start:css": "npx tailwindcss -i ./public/input.css -o ./public/output.css --watch",
    "build:html": "eleventy",
    "start:html": "eleventy --serve --quiet"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.17"
  }
}
